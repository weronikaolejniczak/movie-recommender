<MyGrid>:

    title: title
    year: year
    director: director
    cast: cast
    rating: rating

    GridLayout:
        cols: 1
        size: root.width - 20, root.height - 20
        pos: 10, 10

        GridLayout:
            cols: 2

            Label:
                text: "Title: "

            TextInput:
                id: title
                multiline: False

            Label:
                text: "Year: "

            TextInput:
                id: year
                multiline: False

            Label:
                text: "Director: "

            TextInput:
                id: director
                multiline: False

            Label:
                text: "Main cast: "

            TextInput:
                id: cast
                multiline: True

        Button:
            text: "Submit"
            size: root.width - 20, 70
            size_hint: None, None
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.pressed()

        Label:
            id: rating
            text: "Rating"
            font_size: 48
